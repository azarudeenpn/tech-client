<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/signupbackground"
        android:padding="20dp"
        tools:context=".SignUpActivity">

    <ImageButton
            android:id="@+id/SignUp_AddPhoneButton"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:background="@drawable/background_circle"
            android:src="@drawable/ic_camera"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    />

    <ImageView
            android:id="@+id/SignUp_NameLogo"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/ic_person_white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/SignUp_NameInput"
            app:layout_constraintTop_toTopOf="@id/SignUp_NameInput"
    />

    <EditText
            android:id="@+id/SignUp_NameInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:inputType="textPersonName"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/white"
            android:textColorHint="#A0A0A0"
            android:layout_marginLeft="15dp"
            app:layout_constraintTop_toBottomOf="@id/SignUp_AddPhoneButton"
            app:layout_constraintLeft_toRightOf="@id/SignUp_NameLogo"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/SignUp_PhoneInput"
    />

    <ImageView
            android:id="@+id/SignUp_PhoneLogo"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/ic_phone_white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/SignUp_PhoneInput"
            app:layout_constraintBottom_toBottomOf="@id/SignUp_PhoneInput"
    />
    <EditText
            android:id="@+id/SignUp_PhoneInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Phone"
            android:textColor="@android:color/white"
            android:inputType="phone"
            android:textColorHint="#A0A0A0"
            android:backgroundTint="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/SignUp_NameInput"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/SignUp_NameInput"
            app:layout_constraintBottom_toTopOf="@id/SignUp_CollegeInput"
    />
    <ImageView
            android:id="@+id/SignUp_CollegeLogo"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/ic_college_white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/SignUp_CollegeInput"
            app:layout_constraintBottom_toBottomOf="@id/SignUp_CollegeInput"
    />
    <EditText
            android:id="@+id/SignUp_CollegeInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="College"
            android:inputType="textPersonName"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/white"
            android:textColorHint="#A0A0A0"
            app:layout_constraintTop_toBottomOf="@id/SignUp_PhoneInput"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/SignUp_NameInput"
            app:layout_constraintBottom_toTopOf="@id/SignUp_PasswordInput"
    />
    <ImageView
            android:id="@+id/SignUp_PasswordLogo"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/ic_password_white"
            android:backgroundTint="@android:color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/SignUp_PasswordInput"
            app:layout_constraintBottom_toBottomOf="@id/SignUp_PasswordInput"
    />
    <EditText
            android:id="@+id/SignUp_PasswordInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textColor="@android:color/white"
            android:inputType="textPassword"
            android:backgroundTint="@android:color/white"
            android:textColorHint="#A0A0A0"
            app:layout_constraintTop_toBottomOf="@id/SignUp_CollegeInput"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/SignUp_NameInput"
            app:layout_constraintBottom_toTopOf="@id/SignUp_RepeatPasswordInput"
    />
    <ImageView
            android:id="@+id/SignUp_RepeatPasswordLogo"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/ic_password_white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/SignUp_RepeatPasswordInput"
            app:layout_constraintBottom_toBottomOf="@id/SignUp_RepeatPasswordInput"
    />
    <EditText
            android:id="@+id/SignUp_RepeatPasswordInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Repeat Password"
            android:textColor="@android:color/white"
            android:inputType="textPassword"
            android:backgroundTint="@android:color/white"
            android:textColorHint="#A0A0A0"
            app:layout_constraintTop_toBottomOf="@id/SignUp_PasswordInput"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/SignUp_NameInput"
            app:layout_constraintBottom_toTopOf="@id/SignUp_SignUpButton"
    />
    <Button
            android:id="@+id/SignUp_SignUpButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:background="@drawable/background_roundedstrokedwhite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>